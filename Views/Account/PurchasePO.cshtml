<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Purchase Order List</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: center;
        }

        th {
            background-color: #007bff;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .error-message {
            color: #ff0000;
            font-weight: bold;
        }
    </style>
</head>
<body>

    @model List<BASEL.Models.PurchasePOViewModel>

    <h2 class="text-2xl font-bold mb-4">Purchase Order List</h2>

    @if (ViewBag.Error != null)
    {
        <p class="error-message">@ViewBag.Error</p>
    }
    else if (Model == null || !Model.Any())
    {
        <p>No data available.</p>
    }
    else
    {
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>PO ID</th>
                    <th>Site ID</th>
                    <th>Site Name</th>
                    <th>Customer Code</th>
                    <th>Item Name</th>
                    <th>Unit</th>
                    <th>Rate</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var po in Model)
                {
                    <tr>
                        <td>@po.Id</td>
                        <td>@po.PoId</td>
                        <td>@po.SiteId</td>
                        <td>@po.SiteNm</td>
                        <td>@po.CustomerCode</td>
                        <td>@po.CustItemName</td>
                        <td>@po.Unit</td>
                        <td>@po.Rate</td>
                        <td>@po.Amount</td>
                    </tr>
                }
            </tbody>
        </table>
    }

</body>
</html>
